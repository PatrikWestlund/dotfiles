[general]
accounts = sundhall.se
pythonfile = ~/.offlineimap/keychain.py

[Account saltside.se]
localrepository = local_saltside.se
remoterepository = remote_saltside.se
postsynchook = ~/bin/notify_email

[Account sundhall.se]
localrepository = sundhall.se_local
remoterepository = sundhall.se_remote
postsynchook = ~/bin/notify_email

[Repository local_saltside.se]
type = Maildir
localfolders = ~/.mail/saltside.se
nametrans: lambda folder: {'[Gmail]/Trash'   : 'trash',
                           '[Gmail]/Spam'    : 'spam',
                           '[Gmail]/Sent Mail' : 'sent',
                           '[Gmail]/Drafts'    : 'drafts',
                           '[Gmail]/All Mail'  : 'archive',
                           'INBOX'             : 'inbox',
                           }.get (folder, folder)

[Repository remote_saltside.se]
type = Gmail
remoteuser = patrik@saltside.se
remotepasseval = get_keychain_pass(account="patrik@saltside.se", server="imap.gmail.com")
sslcacertfile = /usr/local/etc/openssl/cert.pem
realdelete = no
nametrans: lambda folder: {'[Gmail]/Trash'   : 'trash',
                           '[Gmail]/Spam'    : 'spam',
                           '[Gmail]/Sent Mail' : 'sent',
                           '[Gmail]/Drafts'    : 'drafts',
                           '[Gmail]/All Mail'  : 'archive',
                           'INBOX'             : 'inbox',
                           }.get (folder, folder)
folderfilter: lambda folder: folder in ['[Gmail]/Trash',
                                        '[Gmail]/Spam',
                                        '[Gmail]/Sent Mail',
                                        '[Gmail]/Drafts',
                                        '[Gmail]/All Mail',
                                        'INBOX'
                                        ]

[Repository sundhall.se_local]
type = Maildir
localfolders = ~/.mail/sundhall.se
nametrans = lambda folder: {'inbox': 'INBOX',
                            'archive': 'INBOX.Archive',
                            'drafts': 'INBOX.Drafts',
                            'sent': 'INBOX.Sent Items',
                            'trash': 'INBOX.Trash',
                            'spam': 'INBOX.Junk Mail',
                              }.get(folder, folder)

[Repository sundhall.se_remote]
type = IMAP
remotehost = mail.messagingengine.com
remoteport = 993
remoteuser = patrikwestlund@fastmail.fm
remotepasseval = get_keychain_pass(account="patrikwestlund@fastmail.fm", server="mail.messagingengine.com")
ssl = yes
sslcacertfile = /usr/local/etc/openssl/cert.pem
nametrans = lambda folder: {'INBOX': 'inbox',
                            'INBOX.Archive': 'archive',
                            'INBOX.Drafts': 'drafts',
                            'INBOX.Sent Items': 'sent',
                            'INBOX.Trash': 'trash',
                            'INBOX.Junk Mail': 'spam',
                              }.get(folder, folder)

expunge = no

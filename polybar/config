[colors]
background = #242529
background-alt = #444
foreground = #F2F3F5
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40


[bar/bar]
monitor = ${env:MONITOR:eDP1}
height = 24

padding-right = 0

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "Inconsolata Nerd Font:pixelsize=14;2"
font-1 = "FontAwesome:pixelsize=14;2"

module-margin-left = 2
module-margin-right = 1

modules-left = i3
modules-center = mpd
modules-right = wifi vpncheck backlight keyboard pavolume battery date


[module/i3]
type = internal/i3

format = <label-state> <label-mode>

label-focused = %index%
label-focused-foreground = #242529
label-focused-background = #FB546E
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-visible = %index%
label-visible-padding = 1

label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 1


[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

poll-interval = 5

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>


label-discharging = %percentage%%  (%consumption%w)

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

animation-charging-framerate = 750


[module/keyboard]
type = internal/xkeyboard

format = ⌨ <label-layout>


[module/date]
type = internal/date

interval = 1.0

date = %Y-%m-%d
time = %H:%M

date-alt = %A, %d %B %Y
time-alt = %H:%M:%S

format = <label>

label =  %date% %time%
label-foreground = #242529
label-background = #FB546E
label-padding = 1


[module/wifi]
type = internal/network

interface = wlp2s0

label-connected =   %essid%
label-connected-padding-left = 1
label-disconnected =  not connected
label-disconnected-padding-left = 1
label-disconnected-foreground = #66ffffff


[module/backlight]
type = internal/xbacklight

format = <label>

label =  %percentage%%


[module/vpncheck]
type = custom/script
exec = pgrep openvpn
interval = 5
label = vpn
format-underline = #268bd2
format-prefix = " "
format-prefix-foreground = #5b


[module/pavolume]
type = custom/script
tail = true
label = %output%
exec = ~/.config/polybar/pavolume.sh --listen
click-right = exec pavucontrol
click-left = ~/.config/polybar/pavolume.sh --togmute
scroll-up = ~/.config/polybar/pavolume.sh --up
scroll-down = ~/.config/polybar/pavolume.sh --down


[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600
password =

label-song = ♫ %artist% - %title%


[settings]
screenchange-reload = true

; vim:ft=dosini
